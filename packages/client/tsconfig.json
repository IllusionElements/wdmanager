{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "declaration": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "outDir": "./dist",
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@manager/utils": ["../utils/src/*"],
      "@vault/hooks": ["./src/hooks/*"],
      "@vault/hooks/useApollo": ["./src/hooks/useApollo.ts"]
    }
  },
  "include": ["./src/**/*", "./__generated__/globalTypes.ts"],
  "exclude": ["node_modules"]
}
