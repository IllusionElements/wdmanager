{
  "name": "wdmanager",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/graphql": "^14.2.0",
    "lerna": "^3.14.1",
    "typescript": "^3.5.1"
  },
  "workspaces": [
    "packages/core",
    "packages/services",
    "packages/utils/"
  ],
  "scripts": {
    "build": "yarn tsc -b tsconfig.build.json",
    "dev": "yarn nodemon --inspect -r esm ./packages/core/dist",
    "buildAll": "yarn workspaces run build",
    "push": "git push",
    "commit": "git add . && git commit -m"
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "esm": "^3.2.25",
    "nodemon": "^1.19.1"
  }
}
