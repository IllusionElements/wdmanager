{
  "name": "wdmanager",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/graphql": "^14.2.0",
    "lerna": "^3.14.1"
  },
  "workspaces": [
    "packages/utils/",
    "packages/services",
    "packages/core"
  ],
  "scripts": {
    "build": "yarn tsc -b tsconfig.build.json",
